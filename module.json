{
	"comment": "Module definition file.",
	"name": "file-service",
	"description": "Upload files as attachments for sObjects.",
	"connectedApp": "default",
	"files": ["FileService.php", "UploadedDocument.php"],
	"components": ["upload", "documents"],
	"links":[
		{
        	"href":"/file/upload",
        	"label": "Upload Files"
		},
		{
			"href":"/file/list",
			"label": "My Files"
		}
	],
	"routes": {
		"file/upload": {
			"callback":"showForm",
			"content-type":"text/html",
            "access":"is_authenticated",
            "authorization":"webserver"
		},
		"file/upload/file": {
			"callback":"upload",
			"content-type":"text/html"
		},
		"file/list": {
			"callback":"list",
			"content-type":"text/html",
            "access":"is_authenticated",
            "authorization":"webserver"
		},
		"file/list/%entityId": {
			"callback":"list",
			"content-type":"text/html"
		},
		"file/download/%id": {
			"callback":"downloadContentDocument",
			"content-type":"text/html"
		},
		"file/delete/%id": {
			"callback":"deleteContentDocument",
			"content-type":"text/html"
		},
		"attachment/%id":{
			"callback": "getAttachment",
			"content-type": "application/base64"
		}
	}
}